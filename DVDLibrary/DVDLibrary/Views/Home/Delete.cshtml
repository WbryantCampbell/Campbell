@model DVDLibrary.Models.DVD
@{
    ViewBag.Title = "Delete";
}

<div class="row">
    <div class="col-xs-12">
        <h3>Delete DVD</h3>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(d => d.id)
            <p>Are you sure you want to delete this dvd?@Html.DisplayFor(d => d.id)</p>
            <button type="submit" class="btn btn-danger">Delete</button>
            @Html.ActionLink("Cancel", "List", "Home", null, new {@class = "btn btn-info"})
        }
    </div>
</div>


