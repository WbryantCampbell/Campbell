@model DVDLibrary.Models.DVD
@{
    ViewBag.Title = "Add";
}
<head>
    <link href="~/Content/jquery.rateyo.css" rel="stylesheet" type="text/css" />
</head>
<h2 class="text-center">Add a new DVD to your collection</h2>
<div class="container">
    <div class="col-xs-3"></div>
    <div class="col-xs-6">
        <div class="row">
            @using (Html.BeginForm("Add", "Home", null, FormMethod.Post, new { id = "addDVD" }))
            {
                @Html.ValidationSummary()
                <div class="panel panel-primary">
                    <div class="col-xs-8">
                        <div class="panel-heading">
                            <h4 class="panel-title">New DVD</h4>
                        </div>
                        <div class="panel-body">
                            <div class="form-group">
                                <label>Title</label>
                                @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })                            
                            </div>
                            <div class="form-group">
                                <label>Release Date</label><br />
                                @Html.EditorFor(m => m.ReleaseDate, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>MPAA Rating</label>
                                @Html.EnumDropDownListFor(m => m.MPAA, "Select a Rating", new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Director Name</label>
                                @Html.TextBoxFor(m => m.DirectorName, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Studio</label>
                                @Html.TextBoxFor(m => m.Studio, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Your rating</label>
                                <div id="rateYo"></div>
                                @Html.HiddenFor(m => m.UserRating, new { @id = "userRating" })
                            </div>
                            <div class="form-group">
                                <label>User Notes</label>
                                <br />
                                @Html.TextAreaFor(m => m.UserNotes, new { @cols = "80", @rows = "4" })
                            </div>
                            <div class="form-group">
                                <h4>Who were the top actors in the film?</h4>
                                <label>Actor #1 </label>
                                @Html.TextBoxFor(m => m.Actors[0].FirstName, new { @class = "form-control", placeholder = "First Name" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Actors[0].LastName, new { @class = "form-control", placeholder = "Last Name" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Actors[0].CharName, new { @class = "form-control", placeholder = "Character Name" })
                            </div>
                            <div class="btn btn-sm btn-success" id="addActor2">Add Actor</div>
                            <div class="form-group">
                                <label class="hidediv1">Actor #2 </label>
                                @Html.TextBoxFor(m => m.Actors[1].FirstName, new { @class = "form-control hidediv1", placeholder = "First Name" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Actors[1].LastName, new { @class = "form-control hidediv1", placeholder = "Last Name" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Actors[1].CharName, new { @class = "form-control hidediv1", placeholder = "Character Name" })
                            </div>
                            <div class="btn btn-sm btn-success hidediv1" id="addActor3">Add Actor</div>
                            <div class="form-group">
                                <label class="hidediv2">Actor #3 </label>
                                @Html.TextBoxFor(m => m.Actors[2].FirstName, new { @class = "form-control hidediv2", placeholder = "First Name" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Actors[2].LastName, new { @class = "form-control hidediv2", placeholder = "Last Name" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Actors[2].CharName, new { @class = "form-control hidediv2", placeholder = "Character Name" })
                            </div>
                            <button class="btn btn-primary">Save</button>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
    <div class="col-xs-3"></div>
</div>
@section scripts{
    <script src="~/scripts/jquery-1.10.2.min.js"></script>
    <script src="~/scripts/jquery.validate.min.js"></script>
    <script src="~/scripts/app/jquery-validate-default.js"></script>
    <script src="~/scripts/additional-methods.min.js"></script>
    <script src="~/scripts/jquery.rateyo.min.js"></script>
    <script src="~/scripts/app/dvdValidation.js"></script>
    <script src="~/scripts/app/InitRateYo.js"></script>
    <script src="~/scripts/app/AddDVD.js"></script>
}


